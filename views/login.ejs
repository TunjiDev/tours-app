<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= title %></title>
</head>
<body>
    <%- include('./partials/header.ejs') %>

    <main class="main">
        <div class="login-form">
            <h2 class="heading-secondary ma-bt-lg">Log into your account</h2>
            <form action="" class="form form--login">
                <div class="form__group">
                    <label for="email" class="form__label">Email address</label>
                    <input type="email" name="" id="email" class="form__input" placeholder="you@example.com" required>
                </div>
                <div class="form__group ma-bt-md">
                    <label for="password" class="form__label">Password</label>
                    <input type="password" name="" id="password" class="form__input" placeholder="Enter your password" required minlength="8">
                </div>
                <div class="form__group">
                    <button class="btn btn--green">Login</button>
                </div>
            </form>
        </div>
    </main>

    <%- include('./partials/footer.ejs') %>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.18.0/axios.js"></script> -->
    <script src="/js/login.js" type="module"></script>
</body>
</html>